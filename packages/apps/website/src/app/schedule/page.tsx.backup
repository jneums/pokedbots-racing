function RaceCard({ race, eventId }: { race: any; eventId: number }) {
  const getTerrainName = (terrain: any): string => {
    if ('ScrapHeaps' in terrain) return 'Scrap Heaps';
    if ('WastelandSand' in terrain) return 'Wasteland Sand';
    if ('MetalRoads' in terrain) return 'Metal Roads';
    return 'Unknown';
  };

  const getTerrainIcon = (terrain: any): string => {
    if ('ScrapHeaps' in terrain) return 'üî©';
    if ('WastelandSand' in terrain) return 'üèúÔ∏è';
    if ('MetalRoads' in terrain) return 'üõ£Ô∏è';
    return 'üèÅ';
  };

  const getRaceClassName = (raceClass: any): string => {
    if ('Scrap' in raceClass) return 'Scrap';
    if ('Junker' in raceClass) return 'Junker';
    if ('Raider' in raceClass) return 'Raider';
    if ('Elite' in raceClass) return 'Elite';
    if ('SilentKlan' in raceClass) return 'Silent Klan';
    return 'Unknown';
  };

  const spotsRemaining = Number(race.maxEntries) - Number(race.currentEntries);
  const isFull = spotsRemaining <= 0;

  return (
    <Card className="border-2 border-primary/20 hover:border-primary/50 transition-all hover:shadow-lg bg-card/50 backdrop-blur">
      <CardContent className="p-6">
        <div className="flex items-start justify-between gap-4">
          <div className="flex-1 space-y-3">
            {/* Race Name and Badges */}
            <div className="flex items-center gap-3 flex-wrap">
              <h3 className="text-lg font-bold">{race.name}</h3>
              <Badge variant="outline" className="bg-primary/20 text-primary">
                {getRaceClassName(race.raceClass)}
              </Badge>
              {isFull ? (
                <Badge className="bg-red-500/90 hover:bg-red-500">Full</Badge>
              ) : spotsRemaining <= 3 ? (
                <Badge className="bg-yellow-500/90 hover:bg-yellow-500">
                  {spotsRemaining} spot{spotsRemaining !== 1 ? 's' : ''} left
                </Badge>
              ) : (
                <Badge className="bg-green-500/90 hover:bg-green-500">Open</Badge>
              )}
            </div>

            {/* Race Details */}
            <div className="flex items-center gap-4 text-sm text-muted-foreground flex-wrap">
              <span className="flex items-center gap-1">
                {getTerrainIcon(race.terrain)}
                {getTerrainName(race.terrain)}
              </span>
              <span>‚Ä¢</span>
              <span className="font-mono">{Number(race.distance)}km</span>
              <span>‚Ä¢</span>
              <span>{formatICP(race.entryFee)} entry</span>
              <span>‚Ä¢</span>
              <span>üë• {Number(race.currentEntries)}/{Number(race.maxEntries)}</span>
            </div>
          </div>

          {/* View Button */}
          <Link to={`/race/${race.raceId}`}>
            <Button size="sm" variant="default">
              View ‚Üí
            </Button>
          </Link>
        </div>
      </CardContent>
    </Card>
  );
}

