function RaceCardWithData({ raceId, eventId }: { raceId: number; eventId: number }) {
  const { data: eventData } = useGetEventWithRaces(eventId);
  
  const race = useMemo(() => {
    if (!eventData) return null;
    return eventData.races.find(r => Number(r.raceId) === raceId);
  }, [eventData, raceId]);

  if (!race) {
    return (
      <Card className="border-2 border-primary/20 bg-card/30 backdrop-blur animate-pulse">
        <CardContent className="p-6">
          <div className="h-16"></div>
        </CardContent>
      </Card>
    );
  }

  return <RaceCard race={race} eventId={eventId} />;
}
