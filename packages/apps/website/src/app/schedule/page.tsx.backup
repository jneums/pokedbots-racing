    if (!upcomingEventsData) return [];
    
    const races: Array<{ race: any; event: any; eventId: number }> = [];
    
    upcomingEventsData.forEach(({ event }) => {
      // Fetch detailed races for each event (will be cached by React Query)
      event.raceIds.forEach(raceId => {
        races.push({
          race: { raceId, name: `Loading...` }, // Placeholder
          event,
          eventId: Number(event.eventId),
